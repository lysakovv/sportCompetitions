<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6FF"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/menuvisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/googlebold"
            android:text="SportCompetitions"
            android:textColor="@color/light"
            android:textSize="34sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_text_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:hint="Логин"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/googleregular"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cellBg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_text_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Пароль"
            android:visibility="gone"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/googleregular"
                android:padding="0dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/adminlogin"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:text="Вход от имени администратора"
            android:textColor="@color/panelsBg" />

        <Button
            android:id="@+id/login"
            android:layout_width="268dp"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/panelsBg"
            android:fontFamily="@font/googleregular"
            android:text="Войти" />

    </LinearLayout>

</LinearLayout>